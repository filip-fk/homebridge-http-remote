{
  "pluginAlias": "HttpRemotePlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "devices": {
      "type": "array",
      "title": "Devices",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "required": true,
            "default": "My HTTP TV"
          },
          "serialNumber": {
            "title": "Serial number",
            "type": "string",
            "required": true,
            "default": "my-http-tv-1"
          },
          "method": {
            "title": "HTTP Method",
            "type": "string",
            "default": "POST",
            "oneOf": [
              {
                "title": "GET",
                "enum": [
                  "GET"
                ]
              },
              {
                "title": "POST",
                "enum": [
                  "POST"
                ]
              },
              {
                "title": "PATCH",
                "enum": [
                  "PATCH"
                ]
              },
              {
                "title": "PUT",
                "enum": [
                  "PUT"
                ]
              },
              {
                "title": "OPTIONS",
                "enum": [
                  "OPTIONS"
                ]
              },
              {
                "title": "DELETE",
                "enum": [
                  "DELETE"
                ]
              },
              {
                "title": "TRACE",
                "enum": [
                  "TRACE"
                ]
              },
              {
                "title": "HEAD",
                "enum": [
                  "HEAD"
                ]
              },
              {
                "title": "CONNECT",
                "enum": [
                  "CONNECT"
                ]
              }
            ]
          },
          "power": {
            "title": "Power",
            "type": "object",
            "required": false,
            "properties": {
              "onUrl": {
                "title": "Off URL",
                "type": "string",
                "required": true
              },
              "offUrl": {
                "title": "Off URL",
                "type": "string",
                "required": true
              }
            }
          },
          "button": {
            "title": "Buttons",
            "type": "object",
            "required": false,
            "properties": {
              "fastForwardUrl": {
                "title": "Fast Forward URL",
                "type": "string",
                "required": false
              },
              "nextUrl": {
                "title": "Next URL",
                "type": "string",
                "required": false
              },
              "previousUrl": {
                "title": "Previous URL",
                "type": "string",
                "required": false
              },
              "upUrl": {
                "title": "Up URL",
                "type": "string",
                "required": false
              },
              "downUrl": {
                "title": "Down URL",
                "type": "string",
                "required": false
              },
              "leftUrl": {
                "title": "Left URL",
                "type": "string",
                "required": false
              },
              "rightUrl": {
                "title": "Rigth URL",
                "type": "string",
                "required": false
              },
              "selectUrl": {
                "title": "Select URL",
                "type": "string",
                "required": false
              },
              "backUrl": {
                "title": "Back URL",
                "type": "string",
                "required": false
              },
              "exitUrl": {
                "title": "Exit URL",
                "type": "string",
                "required": false
              },
              "playUrl": {
                "title": "Play URL",
                "type": "string",
                "required": false
              },
              "infoUrl": {
                "title": "Info URL",
                "type": "string",
                "required": false
              }
            }
          },
          "sources": {
            "title": "Input Sources",
            "type": "array",
            "items": {
              "title": "Input Source",
              "type": "object",
              "properties": {
                "name": {
                  "title": "Name",
                  "type": "string",
                  "required": true
                },
                "url": {
                  "title": "URL",
                  "type": "string",
                  "required": true
                },
                "type": {
                  "title": "Input Type",
                  "type": "number",
                  "required": false,
                  "default": 3
                }
              }
            }
          },
          "model": {
            "title": "Model",
            "type": "string",
            "required": false,
            "default": "HTTP TV"
          },
          "manufacturer": {
            "title": "Manufacturer",
            "type": "string",
            "required": false,
            "default": "Lukas Mateffy"
          }
        }
      }
    }
  }
}